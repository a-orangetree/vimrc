" Turn on line numbers
set nu

" Turn on relative line numbers
set relativenumber

" Number of spaces in a tab
set tabstop=2

set background=dark

colorscheme desert 

" Backspace always backspaces in insert mode
set backspace=eol,start,indent

" Ignore case when searching
set ignorecase

" Show matching brackets when cursor is over bracket
set showmatch

" Auto indent
set ai

" Smart indent
set si

" Wrap lines
set wrap

" Save command history
set history=500

" Show current mode at bottom
set showmode

" Show incomplete commands at bottom
set showcmd

" No sounds
set visualbell

" Turn on syntax highlighting
syntax on
